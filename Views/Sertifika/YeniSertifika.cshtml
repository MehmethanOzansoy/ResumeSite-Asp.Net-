@model MVCCv.Models.Entity.TblSertifikalarım
@{
    ViewBag.Title = "YeniSertifika";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="display-3 text-center">Sertifika Ekleme Sayfası</h3>
<div class="card">
    <div class="card-body">
        <form method="post" class="mt-3">
            <div class="form-group">
                @Html.Label("Sertifika Alınma Tarihini Giriniz", new { @class = "form-label" })
                @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Sertifika Açıklamasını giriniz", new { @class = "form-label" })
                @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
            </div>

            <button class="btn btn-success">Sertifika Ekle</button>
        </form>
    </div>

</div>


