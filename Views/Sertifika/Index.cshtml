@using MVCCv.Models.Entity;
@model List<TblSertifikalarım>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{

    string renkClassı ="success";
}

<!DOCTYPE html>
<html lang="en">
<body class="hold-transition sidebar-mini">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-content">

                                <!-- /.tab-pane -->
                                <div class="tab-pane active" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var i in Model)
                                        {
                                            if (@i.ID % 2 == 0)
                                            {
                                                renkClassı = "light";
                                            }
                                            else
                                            {
                                                renkClassı = "secondary";
                                            }

                                            <div class="time-label" id="tarih">
                                                <span class="bg-@renkClassı">
                                                    @i.Tarih
                                                </span>
                                            </div>

                                            <div id="aciklama">
                                                <i class="fas fa-solid fa-certificate bg-warning"></i>
                                                <div class="timeline-item">
                                                    <div class="timeline-body">
                                                        @i.Aciklama
                                                    </div>
                                                    <div class="timeline-footer">
                                                        <a href="/Sertifika/SertifikaGetir/@i.ID" class="btn btn-primary btn-sm">Düzenle</a>
                                                        <a href="/Sertifika/SertifikaSil/@i.ID" id="SertifikaSil" class="btn btn-danger btn-sm">Sil</a>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </div>
                                    <a href="/Sertifika/YeniSertifika" class="btn btn-info">Yeni Sertifika Gir</a>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</body>
<script>

    let x = document.querySelector("#SertifikaSil");
    let tarih = document.querySelector("#tarih");
    let aciklama = document.querySelector("#aciklama")
    x.addEventListener("click", () => {
        setInterval(() => {
            tarih.remove();
            aciklama.remove();
        },5000)
    })
</script>
</html>
